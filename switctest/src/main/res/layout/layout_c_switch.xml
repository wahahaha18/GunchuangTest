<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.switctest.MainActivity">


    <LinearLayout
        android:layout_width="300px"
        android:layout_height="120px"
        android:id="@+id/r_off">
        <LinearLayout
            android:id="@+id/ll_update_bg_color_off"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/switch_2_bg"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/ellipse_button"/>
            <TextView
                android:id="@+id/tv_r_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OFF"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D7DC0"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300px"
        android:layout_height="120px"
        android:id="@+id/r_on"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_update_bg_color_on"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/switch_2_bg"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_r_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ON"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />
            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@mipmap/ellipse_button"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

